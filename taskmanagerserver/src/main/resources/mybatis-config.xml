<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="application.properties">
    </properties>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${datasource.driverClassName}"/>
                <property name="url" value="${datasource.url}"/>
                <property name="username" value="${datasource.login}"/>
                <property name="password" value="${datasource.password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class="ru.titov.taskmanagerserver.api.repository.UserRepository"/>
        <mapper class="ru.titov.taskmanagerserver.api.repository.TaskRepository"/>
        <mapper class="ru.titov.taskmanagerserver.api.repository.ProjectRepository"/>
    </mappers>
</configuration>